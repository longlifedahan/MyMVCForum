
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>网站数据统计</title>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.easyui-1.4.5.js"></script>
    <script src="~/Scripts/locale/easyui-lang-zh_CN.js"></script>
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/echarts.js"></script>
    <!--获取表-->
    <script type="text/javascript">
        function day() {
            var day = $("#day").datebox("getValue");
            if (day) {
                //日数据
                $.ajax({
                    url: "/Home/GetData",
                    type: "POST",
                    data: {
                        "date": $("#day").datebox("getValue").replace(/-/g, "/"),
                        "type": 3
                    },
                    success: function (result) {
                        $("#day1").html(result.post)
                        $("#day2").html(result.reply)
                        // 基于准备好的dom，初始化echarts实例
                        var myChart = echarts.init(document.getElementById('chart3'));
                        // 指定图表的配置项和数据
                        var option = {
                            title: {
                                text: '日帖/回复分布图',
                            },
                            tooltip: {
                                trigger: 'axis',
                                axisPointer: {
                                    type: 'shadow'
                                }
                            },
                            xAxis: {
                                type: 'category',
                                data: result.type
                            },
                            yAxis: {},
                            legend: {
                                data: ['日帖子', '日回复']
                            },
                            series: [
                                {
                                    type: 'bar',
                                    name: '日帖子',
                                    data: result.posttype
                                },
                                {
                                    type: 'bar',
                                    name: '日回复',
                                    data: result.replynumber
                                }
                            ]
                        };
                        // 使用刚指定的配置项和数据显示图表。
                        myChart.setOption(option);
                    }
                })
            }
            else {
                alert("请选择具体的时间！")
            }

        }

        function month() {
            var month = $("#month").datebox("getValue");
            if (month) {
                //月数据
                $.ajax({
                    url: "/Home/GetData",
                    type: "POST",
                    data: {
                        "date": $("#month").datebox("getValue").replace(/-/g, "/"),
                        "type": 2
                    },
                    success: function (result) {
                        $("#month1").html(result.post)
                        $("#month2").html(result.reply)
                        var myChart = echarts.init(document.getElementById('chart2'));
                        // 指定图表的配置项和数据
                        var option = {
                            title: {
                                text: '每日发帖/回复图'
                            },
                            tooltip: {
                                trigger: 'axis'
                            },
                            legend: {
                                data: ['每日帖子', '每日回复']
                            },
                            grid: {
                                left: '3%',
                                right: '4%',
                                bottom: '3%',
                                containLabel: true
                            },
                            xAxis: {
                                type: 'category',
                                boundaryGap: false,
                                data: result.days
                            },
                            yAxis: {
                                type: 'value'
                            },
                            series: [
                                {
                                    name: '每日帖子',
                                    type: 'line',
                                    stack: 'Total',
                                    data: result.posts
                                },
                                {
                                    name: '每日回复',
                                    type: 'line',
                                    stack: 'Total',
                                    data: result.replys
                                }
                            ]
                        };
                        // 使用刚指定的配置项和数据显示图表。
                        myChart.setOption(option);
                    }
                })
            }
            else {
                alert("请选择某个月份（任何一天都行）")
            }

        }
    </script>

    <!--初始化表-->
    <script type="text/javascript">
        $(function () {
            //总数据
            $.ajax({
                url: "/Home/GetData",
                type: "POST",
                data: {
                    "date": "d",
                    "type": 1
                },
                success: function (result) {
                    // 基于准备好的dom，初始化echarts实例
                    var myChart = echarts.init(document.getElementById('chart1'));
                    // 指定图表的配置项和数据
                    var option = {
                        title: {
                            text: '帖子种类分布图',
                            left: 'center'
                        },
                        tooltip: {
                            trigger: 'item'
                        },
                        legend: {
                            orient: 'vertical',
                            left: 'left'
                        },
                        series: [
                            {
                                name: '数量',
                                type: 'pie',
                                data: result,
                                radius: '50%'
                            }
                        ]
                    };
                    // 使用刚指定的配置项和数据显示图表。
                    myChart.setOption(option);
                }
            })
            //设置日期
            $('#day').datebox('setValue', 'xxxx/xx/xx');
            //设置月份
            $('#month').datebox('setValue', 'xxxx/xx/xx');
            //月数据
            $.ajax({
                url: "/Home/GetData",
                type: "POST",
                data: {
                    "date": $("#month").datebox("getValue").replace(/-/g, "/"),
                    "type": 2
                },
                success: function (result) {
                    $("#month1").html(result.post)
                    $("#month2").html(result.reply)
                    var myChart = echarts.init(document.getElementById('chart2'));
                    // 指定图表的配置项和数据
                    var option = {
                        title: {
                            text: '每日发帖/回复图'
                        },
                        tooltip: {
                            trigger: 'axis'
                        },
                        legend: {
                            data: ['每日帖子','每日回复']
                        },
                        grid: {
                            left: '3%',
                            right: '4%',
                            bottom: '3%',
                            containLabel: true
                        },
                        xAxis: {
                            type: 'category',
                            boundaryGap: false,
                            data: result.days
                        },
                        yAxis: {
                            type: 'value'
                        },
                        series: [
                            {
                                name: '每日帖子',
                                type: 'line',
                                stack: 'Total',
                                data: result.posts
                            },
                            {
                                name: '每日回复',
                                type: 'line',
                                stack: 'Total',
                                data: result.replys
                            }
                        ]
                    };
                    // 使用刚指定的配置项和数据显示图表。
                    myChart.setOption(option);
                }
            })
            //日数据
            $.ajax({
                url: "/Home/GetData",
                type: "POST",
                data: {
                    "date": $("#day").datebox("getValue").replace(/-/g, "/"),
                    "type": 3
                },
                success: function (result) {
                    $("#day1").html(result.post)
                    $("#day2").html(result.reply)
                    // 基于准备好的dom，初始化echarts实例
                    var myChart = echarts.init(document.getElementById('chart3'));
                    // 指定图表的配置项和数据
                    var option = {
                        title: {
                            text: '日帖/回复分布图',
                        },
                        tooltip: {
                            trigger: 'axis',
                            axisPointer: {
                                type: 'shadow'
                            }
                        },
                        xAxis: {
                            type: 'category',
                            data: result.type
                        },
                        yAxis: {},
                        legend: {
                            data: ['日帖子', '日回复']
                        },
                        series: [
                            {
                                type: 'bar',
                                name: '日帖子',
                                data: result.posttype
                            },
                            {
                                type: 'bar',
                                name: '日回复',
                                data: result.replynumber
                            }
                        ]
                    };
                    // 使用刚指定的配置项和数据显示图表。
                    myChart.setOption(option);
                }
            })
        })
    </script>
</head>
<body class="easyui-layout">
    <div data-options="region:'west',title:'日数据',collapsible:false" style="width:33%;">
        <p style="text-align:center;margin:4px 3px 3px 3px">
            <label style="width:10%">日期</label>
            <input id="day" type="text" class="easyui-datebox" required="required" style="width:65%" />
            <button id="checkbyday" style="width:20%" onclick="day()">查询</button>
        </p>
        <table border="1" style="width:100%;text-align:center">
            <tr>
                <th>今日帖子</th>
                <th>今日回复</th>
            </tr>
            <tr>
                <td><span id="day1">0</span></td>
                <td><span id="day2">0</span></td>
            </tr>
        </table>
        <div id="chart3" style="width: 100%;height:300px">
        </div>
    </div>
    <div data-options="region:'center',title:'总数据'">
        <div style="text-align:center">
            <span style="font-weight:bold;font-size:x-large">总体数据</span>
            <span style="font-weight:bold;font-size:x-large">【</span>
            <a href="javascript:void(0)" style="font-size:x-large" onclick="window.location.reload()">刷新</a>
            <span style="font-weight:bold;font-size:x-large">】</span>
        </div>
        <table border="1" style="width:100%;text-align:center">
            <tr>
                <th>总访客数</th>
                <th>当前在线人数</th>
                <th>总注册用户</th>
                <th>总帖子</th>
                <th>总回复</th>
            </tr>
            <tr>
                <td>@ViewData["AccessTimes"]</td>
                <td>@ViewData["OnLineUserCount"]</td>
                <td>@ViewData["Users"]</td>
                <td>@ViewData["Posts"]</td>
                <td>@ViewData["Replys"]</td>
            </tr>
        </table>
        <div id="chart1" style="width: 100%;height:300px">
        </div>
    </div>
    <div data-options="region:'east',title:'月数据',collapsible:false" style="width:33%;">
        <p style="text-align:center;margin:4px 3px 3px 3px">
            <label style="width:10%">月份</label>
            <input id="month" type="text" class="easyui-datebox" required="required" style="width:65%">
            <button id="checkbymonth" style="width:20%" onclick="month()">查询</button>
        </p>
        <table border="1" style="width:100%;text-align:center">
            <tr>
                <th>本月帖子</th>
                <th>本月回复</th>
            </tr>
            <tr>
                <td><span id="month1">0</span></td>
                <td><span id="month2">0</span></td>
            </tr>
        </table>
        <div id="chart2" style="width: 100%;height:300px">
        </div>
    </div>
</body>
</html>
